[Unit]
Description=Docket uWSGI app
After=syslog.target

[Service]
EnvironmentFile=-/etc/sysconfig/docket
ExecStart=/usr/bin/celery --app manage.celery -l info
User=docket
Group=stenographer
Restart=on-failure
Type=simple
StandardError=syslog
NotifyAccess=all
WorkingDirectory=/opt/rocknsm/docket/docket
RuntimeDirectory=docket
RuntimeDirectoryMode=0700

[Install]
WantedBy=multiuser.target
